<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".CreateUserActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ff_logo_light" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/merienda_one"
            android:text="Crar nuevo usuario"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/edtNombres"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/brown_ligth"
            android:ems="10"
            android:fontFamily="@font/merienda_one"
            android:hint="Ingrese sus nombres"
            android:background="@color/color_inputText"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtApellidos"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/brown_ligth"
            android:ems="10"
            android:fontFamily="@font/merienda_one"
            android:hint="Ingrese sus apellidos"
            android:background="@color/color_inputText"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/edtCoreo"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/brown_ligth"
            android:ems="10"
            android:fontFamily="@font/merienda_one"
            android:hint="Ingrese su correo electrónico"
            android:background="@color/color_inputText"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/edtTelefono"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/brown_ligth"
            android:ems="10"
            android:fontFamily="@font/merienda_one"
            android:hint="Ingrese su numero de teléfono"
            android:background="@color/color_inputText"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/brown_ligth"
            android:ems="10"
            android:fontFamily="@font/merienda_one"
            android:hint="Ingrese el nombre de usuario"
            android:background="@color/color_inputText"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/brown_ligth"
            android:ems="10"
            android:fontFamily="@font/merienda_one"
            android:hint="Ingrese su contraseña"
            android:background="@color/color_inputText"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/brown_ligth"
            android:ems="10"
            android:fontFamily="@font/merienda_one"
            android:hint="Confirme su contraseña"
            android:background="@color/color_inputText"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btnRegistrarUsuario"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/orange_principal"
            android:text="Registrarse"
            android:textColor="@color/white"
            android:fontFamily="@font/merienda_one"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/tvCancelar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                android:fontFamily="@font/merienda_one"
                android:text="Ya tengo una cuenta"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp" />
    </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
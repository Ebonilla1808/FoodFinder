<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".activity.LoginActivity">
    <LinearLayout
        android:id="@+id/linear_main_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_nameApp_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/twNameApp_login"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/merienda_one"
                android:text="FoodFinder"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_logo_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                app:srcCompat="@drawable/ff_logo_light" />

            <EditText
                android:id="@+id/edtUser"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/brown_ligth"
                android:ems="10"
                android:fontFamily="@font/merienda_one"
                android:hint="Ingrese su usuario"
                android:background="@color/color_inputText"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtPss"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/brown_ligth"
                android:ems="10"
                android:fontFamily="@font/merienda_one"
                android:hint="Ingrese su contraseÃ±a"
                android:background="@color/color_inputText"
                android:inputType="textPassword" />


            <CheckBox
                android:id="@+id/chkRememberMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="28px"
                android:checked="true"
                android:fontFamily="@font/merienda_one"
                android:text="Recordar credenciales"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/orange_principal"
                android:text="@string/login"
                android:textColor="@color/white"
                android:fontFamily="@font/merienda_one"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView27"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="@+id/imageView27"
                app:layout_constraintTop_toBottomOf="@+id/imageView27" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_shape_back_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">


            <TextView
                android:id="@+id/tvRegistrer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:fontFamily="@font/merienda_one"
                android:text="Crear cuenta"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
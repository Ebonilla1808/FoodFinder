<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/orange_principal"
    android:elevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:elevation="15dp">

        <ImageView
            android:id="@+id/imgIconUbicacion"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ubicacion"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_one"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_one"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvSitioWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_one"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgWebSite"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/web_icon"
            android:scaleType="centerCrop"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/imgLlamar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/phone_icon"
            android:scaleType="centerCrop"
            android:clickable="true"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
